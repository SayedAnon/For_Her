<script>

let page = 0;

function nextPage() {
    page++;

    if (page === 1) {
        document.getElementById("message").innerText = "About Yesterday...";
        document.getElementById("text").innerText = "I know we fought, and maybe I said things I shouldn‚Äôt have.";
    }

    else if (page === 2) {
        document.getElementById("message").innerText = "But The Truth Is...";
        document.getElementById("text").innerText = "Even when we fight, my heart still chooses you.";
    }

    else if (page === 3) {
        document.getElementById("message").innerText = "You Matter To Me";
        document.getElementById("text").innerText = "More than my ego. More than being right. More than anything.";
    }

    else if (page === 4) {
        document.getElementById("message").innerText = "I Love You ‚ù§Ô∏è";
        document.getElementById("text").innerText = "And I don‚Äôt ever want a fight to make you doubt that.";
    }

    else {
        document.querySelector("button").style.display = "none";
    }
}

</script>

